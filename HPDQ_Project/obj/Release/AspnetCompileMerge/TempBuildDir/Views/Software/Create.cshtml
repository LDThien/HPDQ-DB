@model HPDQ_Project.Models.PhanMem

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <link href="~/Assets/libs/css/style.css" rel="stylesheet" />
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <form id="form">
                    <fieldset id="SubmitForm">
                        @Html.HiddenFor(m => m.MaPM, new { @id = "MaPM" })

                        <div class="form-group">
                            <label class="small mb-1" for="inputFirstName">Tên phần mềm</label>
                            @Html.TextBoxFor(m => m.TenPM, new { @id = "TenPM", @class = "form-control", @placeholder = "Tên phần mềm" })
                            <div id="show_error_Ten"></div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Thêm mới" class="btn btn-primary" />
                        </div>

                    </fieldset>
                </form>
            </div>
        </div>
    </div>





}


